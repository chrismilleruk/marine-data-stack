<?xml version="1.0" encoding="UTF-8" ?>
<AVNServer>
  <AVNConfig logLevel="INFO" 
            httpPort="8080"
            navUrl=""
            debugToLog="true"/>
  <AVNHttpServer enabled="true" htmlDir="/usr/lib/avnav/server/web"/>
  
  <!-- TCP connection to SignalK -->
  <AVNSocketReader name="signalk-data"
                  enabled="true"
                  host="signalk" 
                  port="10110"
                  filter=""/>
                  
  <!-- TCP listener for external NMEA data -->
  <AVNSocketWriter name="nmea-out"
                  enabled="true"
                  port="8082"
                  filter=""/>
                  
  <!-- TCP listener for input -->
  <AVNSocketReader name="tcp-input"
                  enabled="true"
                  port="8081"
                  host=""
                  filter=""/>
  
  <!-- Chart directories -->
  <AVNChartDir name="charts" 
              dirname="/home/avnav/charts" 
              leg="org"/>
              
  <AVNChartDir name="user-maps" 
              dirname="/home/avnav/avnav/user/maps" 
              leg="user"/>
              
  <!-- Track and route directories -->
  <AVNTrackDir name="tracks" dirname="/home/avnav/avnav/user/tracks"/>
  <AVNRouteDir name="routes" dirname="/home/avnav/avnav/user/routes"/>
  
  <!-- Log directory -->
  <AVNLog name="main" dirname="/home/avnav/avnav/log"/>
</AVNServer>